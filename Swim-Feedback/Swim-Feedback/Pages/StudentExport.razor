@page "/student-export/{IsReload:bool?}"
@using Swim_Feedback.Data;
@using Microsoft.AspNetCore.Identity

<AuthorizeView>
<Authorized>
<AuthorizeView Roles="Admin">
<Authorized Context="a">
                <div class="trans-header dashboard">
                    <div class="button_logo_wrapper">
                        <a class="btn-secondary" href="/admin-dashboard"><i class="fa-solid fa-chevron-left"></i> Terug</a>
                        <img src="../assets/imgs/dutch_dolphin_logo_1.png" class="dutch_dolphins_header_logo" />
                    </div>
                    <h1>Student Export</h1>
                    <div class="button-div">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    @if (selectedStudent == null || selectedStudent.Name == "{deleted}")
                                    {
                                        <button class="btn btn-danger btn-export-data-disabled" disabled>Export {student}</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger" @onclick="() => ExportPersonalInfo(selectedStudent)">Export @selectedStudent.Name</button>
                                    }
                                </li>
                                <li>
                                    @if (selectedStudent == null || selectedStudent.Name == "{deleted}")
                                    {
                                        <button class="btn btn-danger btn-delete-data-disabled" disabled>Delete {student}</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger" @onclick="() => Anonymizedata(selectedStudent)">Delete @selectedStudent.Name</button>
                                    }
                                </li>
                                <li>
                                    <button class="btn btn-danger" @onclick="ExportAllFeedback">Export</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="student-export-wrapper wrapper">
                                <table id="user-table" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Student Nr</th>
                                            <th>Naam</th>
                                            <th>Klas</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Students != null)
                                        {
                                            @foreach (Student student in Students)
                                            {
                                                <tr class="student-row-@(selectedStudent?.StudentId == student.StudentId ? "active" : "")" @onclick="() => SetSelectedStudent(student)">
                                                    <td>
                                                        @student.CustomerNumber
                                                    </td>
                                                    <td>
                                                        @if (student.Name == "")
                                                        {
                                                            student.Name = "{deleted}";
                                                        }
                                                        @student.Name
                                                    </td>
                                                    <td>
                                                        @if (student.Name == "{deleted}")
                                                        {
                                                            student.SwimClassId = 0;
                                                        }
                                                        @student.SwimClassId
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
</Authorized>
<NotAuthorized Context="a">
<CNotAuthorized />
</NotAuthorized>
</AuthorizeView>
</Authorized>
<NotAuthorized>
<CRedirect URI="login" />
</NotAuthorized>
</AuthorizeView>